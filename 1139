#include <stdio.h>
#include <stdlib.h>

int cmp(const void* a, const void* b) {
	return *(int*)a - *(int*)b;
}

int main() {
	int N;
	scanf("%d", &N);
	int* times = (int*)malloc(sizeof(int) * N);
	for (int i = 0; i < N; i++) {
		scanf("%d", times + i);
	}

	qsort(times, N, sizeof(int), cmp);
	int sum = 0;
	for (int i = 0; i < N; i++) {
		for (int j = 0; j <= i; j++) {
			sum += times[j];
		}
	}
	printf("%d\n", sum);
    return 0;
}
